@using System.Collections.Generic
@using System.Linq
@using PostOffice.Web.Models

@model IEnumerable<ParcelViewModel>

@{
    if (Model == null || !Model.Any())
    {
        <p>Нет зарегистрированных посылок...</p>
    }
    else
    {
        <table class="table table-hover table-bordered">
            <thead>
                <tr>
                    <th>N</th>
                    <th>@Html.DisplayNameFor(x => x.Weight)</th>
                    <th>@Html.DisplayNameFor(x => x.RecipientFio)</th>
                    <th>@Html.DisplayNameFor(x => x.SenderFio)</th>
                    <th>@Html.DisplayNameFor(x => x.RecipAdress)</th>
                    <th>@Html.DisplayNameFor(x => x.SendAdress)</th>
                    <th>@Html.DisplayNameFor(x => x.Inventory)</th>
                </tr>
            </thead>
            <tbody>
                @{
                    var n = 0;
                    foreach (var parcel in Model)
                    {
                        n++;
                        <tr>
                            <td>@n</td>
                            <td>@parcel.Weight</td>
                            <td>@parcel.RecipientFio</td>
                            <td>@parcel.SenderFio</td>
                            <td>@parcel.RecipAdress</td>
                            <td>@parcel.SendAdress</td>
                            <td>
                                <select class="dropdown">
                                    @if (parcel.Inventory.Any())
                                    {
                                        foreach (var thing in parcel.Inventory)
                                        {
                                            <option>
                                                @thing.Name
                                            </option>
                                        }
                                    }
                                    else
                                    {
                                        <option>
                                            Отсутствует
                                        </option>
                                    }
                                </select>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    }
}