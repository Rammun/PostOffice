@using System.Collections.Generic
@using System.Linq
@using PostOffice.Web.Models

@model IEnumerable<ParcelViewModel>

@{
    if (Model == null || !Model.Any())
    {
        <p>Нет зарегистрированных посылок...</p>
    }
    else
    {
        <table class="table table-hover table-bordered">
            <thead>
                <tr>
                    <th>N</th>
                    <th>@Html.DisplayNameFor(x => x.Weight)</th>
                    <th>@Html.DisplayNameFor(x => x.RecipientFullName)</th>
                    <th>@Html.DisplayNameFor(x => x.SenderFullName)</th>
                    <th>@Html.DisplayNameFor(x => x.RecipientAdress)</th>
                    <th>@Html.DisplayNameFor(x => x.SenderAdress)</th>
                    <th>@Html.DisplayNameFor(x => x.Inventory)</th>
                </tr>
            </thead>
            <tbody>
                @{
                    var n = 0;
                    foreach (var parcel in Model)
                    {
                        n++;
                        <tr>
                            <td>@n</td>
                            <td>@parcel.Weight</td>
                            <td>@parcel.RecipientFullName</td>
                            <td>@parcel.SenderFullName</td>
                            <td>@parcel.RecipientAdress</td>
                            <td>@parcel.SenderAdress</td>
                            @if (string.IsNullOrEmpty(parcel.Inventory))
                            {
                                <td>Отсутствует</td>
                            }
                            else
                            {
                                <td>Отсутствует</td>
                            }
                        </tr>
                    }
                }
            </tbody>
        </table>
    }
}